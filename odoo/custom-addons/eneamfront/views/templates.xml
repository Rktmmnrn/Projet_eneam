<odoo>
    <!-- Template d'erreur -->
    <template id="error_template" name="Erreur Pointage">
        <t t-call="website.layout">
            <div class="container py-4">
                <div class="alert alert-danger">
                    <h4>❌ Erreur</h4>
                    <p t-esc="error" />
                    <a href="/pointage" class="btn btn-secondary">Retour à l'accueil</a>
                </div>
            </div>
        </t>
    </template>

    <!-- Template de résultat de pointage -->
    <template id="pointage_result" name="Résultat Pointage">
        <t t-call="website.layout">
            <div class="container py-4">
                <div t-if="success" class="alert alert-success">
                    <h4>✅ Succès</h4>
                    <p t-esc="message" />
                    <p>
                        <strong>Employé:</strong>
                        <span t-esc="employee.name" />
                    </p>
                    <p>
                        <strong>Matricule:</strong>
                        <span t-esc="matricule" />
                    </p>
                    <p>
                        <strong>Type:</strong>
                        <span t-esc="type_pointage" />
                    </p>
                    <a href="/pointage" class="btn btn-primary">Retour au pointage</a>
                </div>
                <div t-if="not success" class="alert alert-danger">
                    <h4>❌ Erreur</h4>
                    <p t-esc="message" />
                    <a href="/pointage" class="btn btn-primary">Retour au pointage</a>
                </div>
            </div>
        </t>
    </template>

    <!-- Template de confirmation de mise à jour -->
    <template id="confirm_update_template" name="Confirmation Mise à Jour">
        <t t-call="website.layout">
            <div class="container py-4">
                <div class="alert alert-warning">
                    <h4>⚠️ Pointage déjà existant</h4>
                    <p> Vous avez déjà pointé <strong t-esc="type_pointage" /><t
                            t-if="ancienne_heure"> à <span t-esc="ancienne_heure" /></t>
                        aujourd'hui. </p>
                    <p>Souhaitez-vous mettre à jour l'heure de pointage ?</p>

                    <div class="mt-3">
                        <!-- Bouton OUI - Mettre à jour -->
                        <a t-attf-href="/pointage/update/{{ existing_pointage.id }}"
                            class="btn btn-warning me-2">
                            ✅ Oui, mettre à jour
                        </a>

                        <!-- Bouton NON - Retour -->
                        <a href="/pointage" class="btn btn-secondary">
                            ❌ Non, annuler
                        </a>
                    </div>

                    <div class="mt-2 small text-muted">
                        <strong>Employé:</strong> <span t-esc="employee.name" /> (<span
                            t-esc="matricule" />) </div>
                </div>
            </div>
        </t>
    </template>
</odoo>